<%- layout("/layouts/boilerplate") %> 
    <h2><%= campground.title %></h2> 
    <h3><%= campground.location %></h3>
    <img width=600 height=500 src="<%= campground.image%>">
    <p><%= campground.description %></p>
    <p>Price: <%= campground.price?`$&#8377; {campground.price.toString()}`:"FREE" %></p>
    <a href="/campgrounds/<%= campground._id %>/edit">Edit</a>
    <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
        <button>Delete campground</button>
    </form>
    <footer>
        <a href="/campgrounds">Show All Campgrounds</a>
    </footer> 