<%- layout("/layouts/boilerplate") %> 
  <h2>Edit Campground</h2>
  <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
      <div>
          <label for="title">Title</label>
          <input type = "text" id = "title" value="<%= campground.title %>" name = "campgrounds[title]">
      </div>
      <div>
          <label for="">Location</label>
          <input type = "text" id = "location" value = <%= campground.location %> name = "campgrounds[location]">
      </div>
      <button>Update campground</button>
  </form>  
  <footer>
      <a href="/campgrounds/<%= campground._id %>">Back to the campground</a>
  </footer>