<%- layout("/layouts/boilerplate") %> 
<div class="row ">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= campground.image%>" style= "max-height: 700px;" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= campground.title %></h5>
        <p class="card-text"><%= campground.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Location: <%= campground.location %></li>
        <li class="list-group-item">Price: <%= campground.price?`Rs. ${campground.price.toString()}`:"FREE" %></li>
      </ul>
      <div class="card-body">
        <a class ="btn btn-success" href="/campgrounds/<%= campground._id %>/edit">Edit Campground</a>
        <a class ="btn btn-secondary" href="/campgrounds">Show All Campgrounds</a>
        <form style="display: inline;"action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
          <button class="btn btn-danger">Delete campground</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-6">
    <h2>Leave a Review</h2>
    <form action="/campgrounds/<%= campground._id %>/reviews" class="mb-3 validated-form" method="post" novalidate >
      <div class="mb-3">
        <label for="rating" class="form-label">Rating</label>
        <input type="range" class="form-range" min="1" max="5"name="review[rating]" id="rating">
      </div>
      <div class="mb-3">
        <label class="form-label" for="body">Review</label>
        <textarea class= "form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
      <button class="btn btn-success">Submit</button>      
    </form>
    <div>
      <h2>Reviews:</h2>
      <% for (let reviews of campground.reviews){ %>
       <div class="card mb-2">
         <div class="card-body">
            <h5 class="card-title">Rating: <%= reviews.rating %> Stars</h5>
            <p class="card-text"><%= reviews.body %></p> 
            <form action="/campgrounds/<%= campground._id %>/reviews/<%= reviews._id%>?_method=DELETE" method="POST"><button class="btn btn-sm btn-danger">Delete</button></form>
         </div>  
       </div>
      <% } %>  
    </div>
  </div>
</div>