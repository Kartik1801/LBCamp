<%= layout('layouts/boilerplate') %>
<h1>Register</h1>
<form action="/register" class="validated-form" novalidate method="POST">
    <div class="mb-3">
        <label for="username" class="form-label">Username:</label>
        <input type="text" name="user[username]" placeholder="Username" id="username" class="form-control" required>
        <div class="valid-feedback">
            Looks good! 
        </div>
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" name="user[email]" placeholder="Email" id="email" class="form-control" required>
        <div class="valid-feedback">
            Looks good! 
        </div>
    </div>
    <div class="mb-3">
        <label for="password" class="form-label">Password:</label>
        <input type="password" name="user[password]" placeholder="Password" id="password" class="form-control" required>
        <div class="valid-feedback">
            Looks good! 
        </div>
    </div>
    <button class="btn btn-success" type="submit">Sign In</button>
</form>